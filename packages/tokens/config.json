{
  "$schema": "https://unpkg.com/style-dictionary@latest/lib/utils/json/schema.json",
  "source": ["src/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true,
            "selector": ":root"
          }
        }
      ]
    }
  }
}


